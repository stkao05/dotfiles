#!/bin/bash
set -x #echo on

# absolute path is need here for 'cd' command below (i.e. cannot use "~/todoist")
TODOIST_WEB_HOME="/Users/stevenkao/workspace/todoist-web"

cd $TODOIST_WEB_HOME
sleep 2

# vim window
tmux new-session -s todoist-web -n vim -d

# second window for Todoist
tmux new-window -n console -t todoist-web:2
tmux split-window -h -t todoist-web:2
tmux send-keys -t todoist-web:2.2  "npm run start:staging"  C-m

tmux select-window -t todoist-web:2
tmux attach -t todoist-web
